<% layout('layouts/boilerplate') %>

<div class="container d-flex justify-content-center align-items-center mt-1"></div>
    <div class="row">
        <div class="col-md-6 offset-md-3 col-xl-4 offset-xl-4">
            <div class="card shadow">
                <img src="https://plus.unsplash.com/premium_photo-1682390303346-196626ab1220?w=500&auto=format&fit=crop&q=60&ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxzZWFyY2h8MTd8fGNhbXBpbmd8ZW58MHx8MHx8fDA%3D"
                alt="" class="card-img-top" />
                <div class="card-body">
                    <h5 class="card-title">Ragister</h5>
                    <form action="/register" method="post" class="validate-form" novalidate >
                        <div class="mb-3">
                            <label class="form-label" for="username">Username</label>
                        <input class="form-control" type="text" id="username" name="username" autofocus required>
                        <div class="valid-feedback">
                            Looks good!
                        </div>
                        </div>
                        <div class="mb-3">
                            <label class="form-label" for="email">Email</label>
                        <input class="form-control" type="email" id="email" name="email" required>
                        <div class="valid-feedback">
                            Looks good!
                        </div>
                        </div>
                        <div class="mb-3">
                            <label class="form-label" for="password">Password</label>
                        <input class="form-control" type="password" id="password" name="password" required>
                        <div class="valid-feedback">
                            Looks good!
                        </div>
                        </div>
                        <button class="btn btn-success btn-block">Register</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

